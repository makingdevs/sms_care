<html>
  <head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
  </head>
  <body>
    <nav class="light-blue lighten-1" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="#" class="brand-logo">SMS Care</a>
      </div>
    </nav>
    <div class="container">
      <div class="section">
        <!--   Icon Section   -->
        <div class="row">
          <div class="col s8">
            <h2>Scheduled messages</h2>
          </div>
          <div class="col s4">
            <a class="waves-effect waves-light btn" href="/scheduled_message/new">New scheduled message</a>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            <table class="centered">
              <thead>
                <tr>
                  <th>id</th>
                  <th>phone number</th>
                  <th>message</th>
                  <th>scheduled</th>
                  <th>status</th>
                </tr>
              </thead>
              <tbody>
                <!-- Iteration of the messages received from the app.rb -->
                <% @scheduled_messages.each do |message| %>
                  <tr>
                    <td><%= message.id %></td>
                    <td><%= message.phone_number %></td>
                    <td><%= message.body %></td>
                    <td><%= message.scheduled_date.strftime("%d %b, %Y") %></td>
                    <td><%= message.status %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <footer class="page-footer orange">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">SMS Care</h5>
            <p class="grey-text text-lighten-4">We are helping to the world.</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- END -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
  </body>

</html>
