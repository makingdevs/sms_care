<html>
  <head>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  </head>
  <body>
    <nav class="light-blue lighten-1" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="#" class="brand-logo">SMS Care</a>
      </div>
    </nav>
    <div class="container">
      <form action="/scheduled_message/save" method="POST">
        <div class="section">

          <div class="row">
            <h2 class="header">Schedule a new message</h2>
          </div>

          <!--   Icon Section   -->
          <div class="row">
            <form class="col s12">
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix">phone</i>
                  <input name="telephone" type="tel" class="validate">
                  <label for="icon_telephone">Telephone</label>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix">date_range</i>
                  <label for="icon_telephone">Date</label>
                  <input type="date" class="datepicker" name="date">
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <i class="material-icons prefix">mode_edit</i>
                  <textarea name="message" class="materialize-textarea" length="120"></textarea>
                  <label for="icon_prefix2">Type your message:</label>
                </div>
              </div>
              <button class="btn waves-effect waves-light" type="submit">Schedule
                <i class="material-icons right">send</i>
              </button>
            </form>
          </div>
        </div>
      </form>
    </div>

    <footer class="page-footer orange">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">SMS Care</h5>
            <p class="grey-text text-lighten-4">We are helping to the world.</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- END -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
    <script>
     $('.datepicker').pickadate({});
    </script>

  </body>

</html>
